@model appTarefas.Models.Tarefa
@{
	ViewData["Title"] = "Detalhes da Tarefas";
}

<h1>Detalhes da Tarefa</h1>

<p><b>ID:</b> @Model.TarefaId</p>
<p><b>Titulo:</b> @Model.Titulo</p>
<p><b>Descrição:</b> @Model.Descricao</p>
<p><b>Concluída:</b> @(Model.Concluida ? "Sim" : "Não")</p>

<a asp-controller="Tarefas" asp-action="Index" class="btn btn-secondary mt-3">Voltar</a>
